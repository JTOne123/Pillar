<Project Sdk="Microsoft.NET.Sdk">
    <PropertyGroup>
        <AssemblyTitle>Pillar.Tests</AssemblyTitle>
        <VersionPrefix>1.0.0</VersionPrefix>
        <Description>A lightweight PCL framework that helps you develop MVVM Xamarin.Forms applications easily.</Description>
        <Authors>Anthony Simmon (https://anthonysimmon.com)</Authors>
        <Copyright>Copyright © Anthony Simmon 2015-2017</Copyright>
    </PropertyGroup>
	
	<PropertyGroup>
        <TargetFramework>netstandard1.4</TargetFramework>
        <PackageTargetFallback>portable-net45+win8+wpa81+wp8</PackageTargetFallback>
        <DebugType>full</DebugType>
        <DefaultItemExcludes>$(DefaultItemExcludes);**\*.csproj.DotSettings</DefaultItemExcludes>
    </PropertyGroup>
	
	<ItemGroup>
		<PackageReference Include="Moq" Version="4.7.63" />
		<PackageReference Include="Xamarin.Forms" Version="2.3.4.231" />
		<PackageReference Include="xunit" Version="2.2.0" />
		<PackageReference Include="xunit.runner.console" Version="2.2.0" />
	</ItemGroup>
	
	<ItemGroup>
		<ProjectReference Include="..\..\src\Pillar\Pillar.csproj" />
	</ItemGroup>
	
	<ItemGroup>
		<None Remove="**\*.xaml" />
		<Compile Update="**\*.xaml.cs" DependentUpon="%(Filename)" />
		<EmbeddedResource Include="**\*.xaml" SubType="Designer" Generator="MSBuild:UpdateDesignTimeXaml" />
	</ItemGroup>
</Project>